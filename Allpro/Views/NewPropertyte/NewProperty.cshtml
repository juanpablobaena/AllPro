@model Propertys
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        New Property
    </div>
    <div class="card-body">
        <h5 class="card-title">New Propertis </h5>


        <form asp-action="NewProperty" asp-controller="NewPropertyte" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Direccion</label>
                <input asp-for="Address" type="text" class="form-control" id="Nombre" aria-describedby="emailHelp" placeholder="Digite el nombre">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Barrio</label>
                <input asp-for="Location" type="text" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Area</label>
                <input asp-for="Area" type="text" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Abitaciones</label>
                <input asp-for="Num_rooms" type="number" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="Num_rooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">#Baños</label>
                <input asp-for="Num_bathrooms" type="number" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="Num_bathrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Telefono">Parqueadero</label>
                <input asp-for="Parking" type="number" class="form-control" id="Telefono">
                <span asp-validation-for="Parking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Precio</label><br>
                <input asp-for="Price" type="text" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Stratum</label><br>
                <input asp-for="Stratum" type="text" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="Stratum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Image</label><br>
                <input asp-for="Image" type="text" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Tipo de house </label><br>
                <input asp-for="TypeHouseID" type="number" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="TypeHouseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Tipo de house </label><br>
                <input asp-for="TypePropertyID" type="number" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="TypePropertyID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>


